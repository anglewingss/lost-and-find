<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#be3131"
        >
        <ImageView 
            android:id="@+id/act_myself_setting_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/select_press"
            android:src="@drawable/back"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="修改密码"/>
    </RelativeLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/act_myself_setting_oldPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="输入原密码"/>
        <EditText 
            android:id="@+id/act_myself_setting_newPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="输入新密码"/>
        <EditText 
            android:id="@+id/act_myself_setting_newRepwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="再次输入新密码"/>
        <Button 
            android:id="@+id/act_myself_setting_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#be3131"
            android:padding="6dp"
            android:textSize="20sp"
            android:text="确  定"/>
    </LinearLayout>

</LinearLayout>
