<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/register_title_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#aabe3131" >
        
        <ImageButton 
            android:id="@+id/reg_back_ibtn"
            android:onClick="regClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/select_press"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="6dp"
            android:text="注册页面"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/reg_nick_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sele_btn"
            android:singleLine="true"
            android:hint="请输入昵称"
            android:padding="10dp"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/reg_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/sele_btn"
            android:hint="请输入密码"
            android:padding="10dp"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/reg_repwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/sele_btn"
            android:hint="确认密码"
            android:padding="10dp"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/reg_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/sele_btn"
            android:singleLine="true"
            android:hint="手机号码"
            android:padding="10dp"
            android:textColorHint="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/reg_code_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_weight="3"
                android:layout_marginRight="5dp"
                android:background="@drawable/sele_btn"
                android:hint="验证码"
                android:padding="10dp"
                android:textColorHint="#fff" />

            <Button
                android:id="@+id/reg_getcode_btn"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sele_btn"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
        <Button 
            android:id="@+id/reg_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sele_btn"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="点击注册"/>
    </LinearLayout>

</LinearLayout>