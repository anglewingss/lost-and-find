<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#be3131"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/act_search_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/select_press"
            android:src="@drawable/back"/>
        <EditText 
            android:id="@+id/act_search_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_height="fill_parent"
            android:paddingLeft="6dp"
            android:background="@drawable/search_et"
            android:hint=" 请输入关键字"/>
        <ImageView 
            android:id="@+id/act_search_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/select_press"
            android:src="@drawable/map_search"/>
    </LinearLayout>
    <ListView 
        android:id="@+id/act_search_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
